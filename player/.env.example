# local | cloud
ASSET_SOURCE=local

# Required when ASSET_SOURCE=cloud
ASSET_BASE_URL=https://cdn.example.com

# Optional cloud object prefix
ASSET_PREFIX=albums

# Auth session lifetime in days
AUTH_SESSION_DAYS=14

# Supabase sync (server-side only)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_SCHEMA=public
# Supabase primary read/write (default true when Supabase is configured)
SUPABASE_PRIMARY=true
# Set true to disable all supabase write sync
SUPABASE_SYNC_DISABLED=false
